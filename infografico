    <!-- CHART.JS LOGIC -->
    <script>
        // --- UTILITY FUNCTIONS ---

        // Label Wrapping Function (Required by prompt)
        function splitLabel(label) {
            if (label.length > 16) {
                const words = label.split(' ');
                const lines = [];
                let currentLine = words[0];
                for (let i = 1; i < words.length; i++) {
                    if ((currentLine + " " + words[i]).length <= 16) {
                        currentLine += " " + words[i];
                    } else {
                        lines.push(currentLine);
                        currentLine = words[i];
                    }
                }
                lines.push(currentLine);
                return lines;
            }
            return label;
        }

        // Common Tooltip Config (Required by prompt)
        const commonTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // Common Chart Options
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                tooltip: commonTooltipConfig,
                legend: {
                    position: 'bottom',
                    labels: {
                        font: { family: 'Poppins', size: 12 },
                        usePointStyle: true,
                    }
                }
            }
        };

        // --- CHART 1: PILLARS COMPARISON (Grouped Bar) ---
        const ctxPillars = document.getElementById('pillarsChart').getContext('2d');
        // Process labels
        const rawLabels1 = ["Honrar a Fome", "Respeitar a Saciedade", "Pazes com a Comida"];
        const processedLabels1 = rawLabels1.map(splitLabel);

        new Chart(ctxPillars, {
            type: 'bar',
            data: {
                labels: processedLabels1,
                datasets: [
                    {
                        label: 'Abordagem Intuitiva (Positiva)',
                        data: [90, 85, 95], // High positive impact
                        backgroundColor: '#2ecc71',
                        borderRadius: 5
                    },
                    {
                        label: 'Mentalidade de Dieta (Estresse)',
                        data: [20, 30, 15], // Low positive impact / High stress (inverse scale representation)
                        backgroundColor: '#e74c3c',
                        borderRadius: 5
                    }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: { display: true, text: 'N√≠vel de Bem-Estar / Satisfa√ß√£o' }
                    }
                }
            }
        });

        // --- CHART 2: PEACE PIE CHART (Doughnut) ---
        const ctxPeace = document.getElementById('peaceChart').getContext('2d');
        const rawLabels2 = ["Prazer em Comer", "Conex√£o Social", "Nutri√ß√£o", "Culpa e Regras"];
        const processedLabels2 = rawLabels2.map(splitLabel);

        new Chart(ctxPeace, {
            type: 'doughnut',
            data: {
                labels: processedLabels2,
                datasets: [{
                    data: [40, 30, 25, 5],
                    backgroundColor: ['#f39c12', '#3498db', '#2ecc71', '#e74c3c'],
                    borderWidth: 0
                }]
            },
            options: {
                ...commonOptions,
                cutout: '60%',
                plugins: {
                    ...commonOptions.plugins,
                    legend: { position: 'right' }
                }
            }
        });

        // --- CHART 3: HUNGER SCALE (Horizontal Bar) ---
        const ctxHunger = document.getElementById('hungerScaleChart').getContext('2d');
        const rawLabels3 = [
            "1-2: Faminto/Vazio (Zona de Urg√™ncia)", 
            "3-4: Fome Moderada (Come√ßar a Comer)", 
            "5: Neutro (Nem fome, nem cheio)", 
            "6-7: Satisfeito (Parar de Comer)", 
            "8-10: Cheio/Empanturrado (Desconforto)"
        ];
        // Custom split for longer labels here might be tricky, let's keep them slightly simpler or rely on responsive container
        // Actually, let's simplify labels for the chart axis and use full text in narrative
        const shortLabels3 = ["1-2: Faminto", "3-4: Fome Moderada", "5: Neutro", "6-7: Satisfeito", "8-10: Cheio"];
        const processedLabels3 = shortLabels3.map(splitLabel);

        new Chart(ctxHunger, {
            type: 'bar',
            data: {
                labels: processedLabels3,
                datasets: [{
                    label: 'Intensidade da Sensa√ß√£o',
                    data: [9, 6, 5, 7, 10], // Visual magnitude
                    backgroundColor: [
                        '#e74c3c', // Red (Starving)
                        '#2ecc71', // Green (Start)
                        '#f1c40f', // Yellow (Neutral)
                        '#2ecc71', // Green (Stop)
                        '#e67e22'  // Orange/Red (Stuffed)
                    ],
                    borderRadius: 4
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal bar
                ...commonOptions,
                plugins: {
                    ...commonOptions.plugins,
                    legend: { display: false }
                },
                scales: {
                    x: { display: false }, // Hide values, just show bars visually
                    y: { 
                        grid: { display: false }
                    }
                }
            }
        });

        // --- CHART 5: ANXIETY LINE CHART ---
        const ctxAnxiety = document.getElementById('anxietyChart').getContext('2d');
        const rawLabels5 = ["M√™s 1", "M√™s 3", "M√™s 6", "1 Ano", "2 Anos"];
        
        new Chart(ctxAnxiety, {
            type: 'line',
            data: {
                labels: rawLabels5,
                datasets: [
                    {
                        label: 'Comer Intuitivo (Ansiedade caindo)',
                        data: [80, 60, 40, 25, 20],
                        borderColor: '#2ecc71',
                        backgroundColor: 'rgba(46, 204, 113, 0.2)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Efeito Sanfona/Dietas (Inst√°vel)',
                        data: [85, 40, 90, 30, 85],
                        borderColor: '#e74c3c',
                        backgroundColor: 'transparent',
                        borderDash: [5, 5],
                        tension: 0.4
                    }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'N√≠vel de Ansiedade' }
                    }
                }
            }
        });

        // --- CHART 6: RADAR CHART (Holistic) ---
        const ctxRadar = document.getElementById('radarChart').getContext('2d');
        const rawLabels6 = ["Sustentabilidade", "Imagem Corporal", "Energia", "Prazer", "Sa√∫de Mental"];
        const processedLabels6 = rawLabels6.map(splitLabel);

        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: processedLabels6,
                datasets: [
                    {
                        label: 'Intuitivo',
                        data: [90, 85, 80, 95, 90],
                        fill: true,
                        backgroundColor: 'rgba(52, 152, 219, 0.2)',
                        borderColor: '#3498db',
                        pointBackgroundColor: '#3498db'
                    },
                    {
                        label: 'Restritivo',
                        data: [20, 30, 50, 10, 20],
                        fill: true,
                        backgroundColor: 'rgba(231, 76, 60, 0.2)',
                        borderColor: '#e74c3c',
                        pointBackgroundColor: '#e74c3c'
                    }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    r: {
                        angleLines: { display: false },
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                }
            }
        });

